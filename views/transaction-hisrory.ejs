    <!--Lịch sử giao dịch-->
    <br><br><br>
    <div class="">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

               
        <div class="card mb-3 pt-3">
            <div class="mg-b-15" >
                <div class="container mb-4 col-lg-12 col-md-12 col-sm-12 col-xs-12">                    
                    <h4>Lịch sử giao dịch</h4>       
                    <br>               
                    <div>
                        <table  class="table table-bordered">
                            <tr>
                                <th>STT</th>
                                <th>Loại giao dịch</th>
                                <th>Số tiền (VNĐ)</th>
                                <th>Thời gian thực hiện</th>
                                <th>Trạng thái</th>  
                                <th></th>                                                                        
                            </tr>
                            <% userTrans.forEach((u,index) => { %>
                                <tr>
                                    <td><%= index += 1 %></td>
                                    <td>
                                        <% if(u.action == 'CT') { %>
                                            Chuyển tiền
                                        <% } else if(u.action == 'RT') { %>
                                            Rút tiền
                                        <% } else if(u.action == 'NT') { %> 
                                            Nạp tiền
                                        <% } else if(u.action == 'BC') {%>
                                            Mua thẻ
                                        <% } %>  
                                    </td>
                                    <td><%= u.amount.toLocaleString()%></td>
                                    <td><%= u.timeStamps %></td>                                
                                    <td><%= u.status %></td>   
                                    <td> 
                                        <% if(u.action == 'CT') { %>
                                            <a href="/wallet/history-detail-transfer/<%= u.codeTrans %>">Xem chi tiết</a>
                                        <% } else if(u.action == 'RT') { %>
                                            <a href="/wallet/history-detail-withdraw/<%= u.codeTrans  %>">Xem chi tiết</a>
                                        <% } else if(u.action == 'NT') { %> 
                                            <a href="/wallet/history-detail-recharge/<%= u.codeTrans  %>">Xem chi tiết</a>
                                        <% } else if(u.action == 'BC') {%>
                                            <a href="/wallet/history-detail-buycard/<%= u.codeTrans  %>">Xem chi tiết</a>
                                        <% } %> 
                                    </td>                                                                           
                                </tr>  
                             <%}) %> 
                        </table>
                    </div>
                </div>
            </div>           
        </div>
    </div>
