<%- include("./layouts/header.ejs") %> 
    <section style="background-color: #eee;">
        <div class="container py-5 mt-5">
            <div class="row">
                <div class="col-lg-8">
                    <!-- form card cc payment -->
                    <div class="card card-outline-secondary">
                        <div class="card-body">
                            <h3 class="text-center">Chuyển tiền</h3>
                            <hr>
                            <form class="form"  autocomplete="off" method="post" novalidate>
                                <div class="form-group">
                                    <label>Số điện thoại người nhận</label>
                                    <input type="text" name="numReceiver" value="<%= numReceiver %>" class="form-control" autocomplete="off" title="Số điện thoại người nhận" required="" placeholder="Nhập số điện thoại người nhận">
                                </div>
                                <div class="form-group">
                                    <label>Ghi chú</label>
                                    <input type="text" name="desc" value="<%= desc %>" class="form-control" autocomplete="off" required="" placeholder="Nhập ghi chú">
                                </div>
                                <div class="row">
                                    <label class="col-md-6">Số tiền</label>
                                </div>
                                <div class="form-inline">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text">VNĐ</span></div>
                                        <input type="text" class="form-control text-right" id="" placeholder="500000" name="amount" value="<%= amount %>">
                                        <div class="input-group-append"><span class="input-group-text">.00</span></div>
                                        <input id="fee" type="text" class="form-control ml-5" id="exampleInputAmount" placeholder="Phí chuyển 5% tổng số tiền" readonly>
                                    </div>
                                </div>
                                <div class="form-check mt-3 ml-1">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" name="checkFee" > <span>Người nhận chịu phí</span>
                                    </label>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <button type="reset" class="btn btn-default btn-lg btn-block " >Thoát</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-success btn-lg btn-block">Chuyển</button>
                                    </div>
                                </div>
                                <%if (message) {%>
                                    <div class="form-outline mb-3" id="alert">
                                        <div class="alert alert-danger w-100 py-2 " role="alert">
                                            <%=message%>
                                        </div>
                                    </div>

                                <%}%>
                                <%if (success) {%>
                                    <div class="form-outline mb-3" id="alert">
                                        <div class="alert alert-success w-100 py-2 " role="alert">
                                            <%=success%>
                                        </div>
                                    </div>

                                <%}%>
                            </form>
                        </div>
                    </div>
                    <!-- /form card cc payment -->
                </div>
            </div>
        </div>
    </section>
    <!--/container-->
    <%- include("./layouts/footer.ejs") %> 