<%- include("./layouts/header.ejs") %>
    <br><br>
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <span class="anchor" id="formChangePassword"></span>
                        <hr class="mb-5">
                        <!-- form card change password -->
                        <div class="card card-outline-secondary">
                            <div class="card-header " style="background-color: #583bce;">
                                <h3 class="mb-0" style="color: #fff;">Quên mật khẩu</h3>
                            </div>
                            <div class="card-body">
                                <form class="form" method="post" action="/users/forgetpassword">

                                    <div class="form-group">
                                        <label for="phone">Số điện thoại</label>
                                        <input type="text" class="form-control" id="phone" placeholder="Nhập số điện thoại" name="phoneNumber">
                                    </div>
                                    <div class="form-group">
                                        <label for="OTP">Mã OTP</label>
                                        <div class="row col-12">
                                            <div class="col-9 p-0"> <input type="text" class="form-control" id="OTP" placeholder="Nhập mã OTP" name="otp"></div>
                                            <div class="col-3">
                                                <button type="button" class="btn btn-primary btn-md" id="insertOTP">Lấy mã</button>
                                            </div>
                                        </div>
                                        <span class="form-text small text-muted">
                                            Để đổi mật khẩu mới, vui lòng điền đầu đủ thông tin
                                        </span>
                                    </div>
                                    <div class="form-group d-flex justify-content-center">
                                        <a href="" class="text-decoration-none" id="hrefchangepass">
                                            <button type="submit" class="btn btn-success btn-md float-right">Kiểm tra mã
                                                OTP</button>
                                        </a>

                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- /form card change password -->
                    </div>
                </div>
                <!--/row-->
            </div>
            <!--/col-->
        </div>
    </div>


    <!--/container-->
    <%- include("./layouts/footer.ejs") %>