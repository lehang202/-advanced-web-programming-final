<%- include("./layouts/header.ejs") %> 
    <section style="background-color: #eee;">
        <div class="container py-5 mt-5">
            <div class="row">
                <div class="col-lg-8">
                    <!-- form card cc payment -->
                    <div class="card card-outline-secondary">
                        <div class="card-body">
                            <h3 class="text-center">Mua thẻ điện thoại</h3>
                            <hr>
                            <!-- <div class="alert alert-info p-2 pb-3">
                                <a class="close font-weight-normal initialism" data-dismiss="alert" href="#"><samp>&times;</samp></a> 
                                CVC code is required.
                            </div> -->
                            <form class="form" autocomplete="off" method="post" novalidate>
                                <div class="form-group row">
                                    <label class="col-md-12">Chọn thẻ</label>
                                    <div class="col-md-4">
                                        <select class="form-control mt-1" name="nha_mang" size="0">
                                            <option selected>Nhà mạng</option>
                                            <option value="Viettel">Viettel</option>
                                            <option value="Mobifone">Mobifone</option>
                                            <option value="Vinaphone">Vinaphone</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <select class="form-control mt-1" name="menh_gia" size="0" id="menh_gia">
                                            <option selected>Mệnh giá</option>
                                            <option value="10000">10,000 VNĐ</option>
                                            <option value="20000">20,000 VNĐ</option>
                                            <option value="50000">50,000 VNĐ</option>
                                            <option value="100000">100,000 VNĐ</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <select class="form-control mt-1" name="qty" size="0" id="qty">
                                            <option selected>Số lượng</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <label for="fee" class="col-md-12">Tổng tiền</label>
                                </div>
                                <div class="row" id="fee">
                                    <div class="font-weight-bold col-6 text-center" id="sumCard" >
                                        0 Đ
                                    </div>
                                    <div class="col-6 m-auto text-center">Phí dịch vụ: 0 VNĐ</div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <button type="reset" class="btn btn-secondary btn-lg btn-block">Thoát</button>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="../views/phone-card-details.ejs">
                                            <button type="submit" class="btn btn-success btn-lg btn-block">Mua</button>
                                        </a>
                                    </div>
                                </div>
                                <%if (message) {%>
                                    <div class="form-outline mb-3" id="alert">
                                        <div class="alert alert-danger w-100 py-2 " role="alert">
                                            <%=message%>
                                        </div>
                                    </div>

                                <%}%>
                                <%if (success) {%>
                                    <div class="form-outline mb-3" id="alert">
                                        <div class="alert alert-success w-100 py-2 " role="alert">
                                            <%=success%>
                                        </div>
                                    </div>

                                <%}%>
                            </form>
                        </div>
                    </div>
                    <!-- /form card cc payment -->
                </div>
            </div>
        </div>


        <%- include("./layouts/footer.ejs") %> 
        <script>
            function f(event) {
                var element = event.currentTarget
                let menh_gia = document.getElementById("menh_gia")
                let sumCard = document.getElementById("sumCard")
                if (menh_gia.value != 'Mệnh giá') {
                    sumCard.innerHTML = element.value * menh_gia.value
                    sumCard.innerHTML = Number(sumCard.innerHTML).toLocaleString() + ' Đ'
                }
            
            }
            $(document).ready(function() {
                document.getElementById("qty").addEventListener("change", f)
            })
        </script>