<%- include("./layouts/header.ejs") %> 
    <section style="background-color: #eee;">
        <div class="container py-5 mt-5">
            <div class="row">
                
                <div class="col-lg-8">
                    <!-- form card cc payment -->
                    <div class="card card-outline-secondary">
                        <div class="card-body">
                            <h3 class="text-center">Rút tiền về tài khoản</h3>
                            <hr>
                            <div class="alert alert-info p-2 pb-3">
                                <a class="close font-weight-normal initialism" data-dismiss="alert"
                                    href="#"><samp>&times;</samp></a>
                                Mã CVC là bắt buộc.
                            </div>
                            <form class="form"  method="POST" novalidate>
                                <div class="form-group">
                                    <label>Số thẻ</label>
                                    <input type="text" class="form-control" autocomplete="off"
                                        maxlength="6" title="Số thẻ" name="soThe" value="<%= soThe %>" required>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-12">Ngày hết hạn</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" autocomplete="off" name = "deadline" value="<%= deadline %>"
                                             required placeholder="Số thẻ">
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" autocomplete="off" maxlength="3" name = "cvvCode" value="<%= cvvCode %>"
                                             title="Three digits at back of your card" required
                                            placeholder="CVC">
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-12">Số tiền</label>
                                </div>
                                <div class="form-inline">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text">VNĐ</span></div>
                                        <input type="text" class="form-control text-right" id="exampleInputAmount" name = "amount" value="<%= amount %>"
                                            placeholder="500000">
                                        <div class="input-group-append"><span class="input-group-text">.00</span></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Ghi chú</label>
                                    <input type="text" name="description" class="form-control" autocomplete="off" value="<%= description %>"
                                       required>
                                    </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <button type="reset" class="btn btn-default btn-lg btn-block">Thoát</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-success btn-lg btn-block">Rút</button>
                                    </div>
                                </div>
                                
                                <%if (message) {%>
                                    <div class="form-outline mb-3" id="alert">
                                        <div class="alert alert-danger w-100 py-2 " role="alert">
                                            <%=message%>
                                        </div>
                                    </div>

                                <%}%>
                                <%if (success) {%>
                                    <div class="form-outline mb-3" id="alert">
                                        <div class="alert alert-success w-100 py-2 " role="alert">
                                            <%=success%>
                                        </div>
                                    </div>

                                <%}%>
                            </form>
                        </div>
                    </div>
                    <!-- /form card cc payment -->
                </div>
            </div>
        </div>
        <%- include("./layouts/footer.ejs") %> 