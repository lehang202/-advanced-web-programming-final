<%- include("./layouts/header.ejs") %> 
    <br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <span class="anchor" id="formChangePassword"></span>
                        <hr class="mb-3">
                        <!-- form card change password -->
                        <div class="card card-outline-secondary">
                            <div class="card-header" style="background-color: #583bce;">
                                <h3 class="mb-0" style="color: #fff; ">Đổi mật khẩu</h3>
                            </div>
                            <div class="card-body">
                                <form class="form" role="form" autocomplete="off" method="post">
                                    <div class="form-group">
                                        <label for="oldPassword">Mật khẩu hiện tại</label>
                                        <input type="password" class="form-control" id="oldPassword" name="oldpass">
                                    </div>

                                    <div class="form-group">
                                        <label for="newPassword">Mật khẩu mới</label>
                                        <input type="password" class="form-control" id="newPassword" name="newpass">
                                        <span class="form-text small text-muted">
                                            Mật khẩu nên có từ 8-12 ký tự, bao gồm chữ, số, kí tự đặc biệt và
                                            <strong>không</strong> chứa khoảng trắng.
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label for="verifyNewPass">Xác nhận mật khẩu mới</label>
                                        <input type="password" class="form-control" name="renewpass">
                                        <span class="form-text small text-muted">
                                            Để xác nhận, vui lòng nhập lại mật khẩu mới
                                        </span>
                                    </div>
                                    <%if (message !='' ) {%>
                                        <div class="d-flex flex-row" id="alert">

                                            <div class="alert alert-danger w-100 py-2 " role="alert">
                                                <%=message%>
                                            </div>
                                        </div>

                                        <%}%>
                                            <div class="form-group">
                                                <a href="">
                                                    <button type="submit" class="btn btn-success btn-lg float-right" style="background-color: #583bce;">Lưu</button>
                                                </a>
                                            </div>
                                </form>
                            </div>
                        </div>
                        <!-- /form card change password -->
                    </div>
                </div>
                <!--/row-->
            </div>
            <!--/col-->
        </div>
    </div>
    <!--/container-->
    <%- include("./layouts/footer.ejs") %>