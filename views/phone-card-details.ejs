<%- include("./layouts/header.ejs") %> 
  <br><br>
  <div class="container d-md-flex align-items-center justify-content-center">
    <div class="card box1 shadow-sm p-md-5 p-md-5 p-4">
      <h3 class="text-center">Thẻ điện thoại</h3>
      <div class="border-bottom mb-4"></div>
      <div class="d-flex flex-column">
        <div class="d-flex align-items-center justify-content-between">
          <span class=""><%= nha_mang  %></span>
          <span class="ps-1"><%= don_gia.toLocaleString()  %> VNĐ</span>
          </span>
        </div>
        <div class="d-flex align-items-center justify-content-between">
          <span class="">Số lượng</span>
          <span class="ps-1"><%= qty %></span>
          </span>
        </div>
        <div class="d-flex align-items-center justify-content-between">
          <span class="">Phí dịch vụ</span>
          <span class="ps-1">0 VNĐ</span>
          </span>
        </div>
        <div class="border-bottom mb-4"></div>
        <div class="d-flex align-items-center justify-content-between mb-4">
          <div>Tổng phí phải trả</div>
          <span class="ps-1 font-weight-bold"><%= amount.toLocaleString() %>  VNĐ</span>
        </div>
        <div class="d-flex align-items-center justify-content-between mb-4">
          <span class="far fa-file-alt text">
            <span class="ps-2">Mã giao dịch:</span>
          </span>
          <span class="ps-3"><%= codeTrans  %></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mb-4">
          <span class="far fa-calendar-alt text">
            <span class="ps-2">Thời gian:</span>
          </span> <span class="ps-3"><%= newdate  %></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mb-4">
          <span class="far fa-file-alt">
            <span class="ps-2">Mã thẻ điện thoại:</span>
          </span>
          <span class="ps-3 text-warning list-unstyled">
            <% codeCard.forEach((code) => { %>
              <li>
                <%= code  %> 
              </li>
            <% })  %> 
          </span>
        </div>
      </div>
    </div>
  </div>
  <%- include("./layouts/footer.ejs") %> 